{
  "name": "btccom/bitwasp-bitcoin-bch-addon",
  "homepage": "https://github.com/btccom/bitwasp-bitcoin-bch-addon",
  "type": "library",
  "description": "Bridge to bitwasp/bitcoin for bch.",
  "keywords": ["bcash", "bch", "bitcoin cash", "cashaddr"],
  "license": "MIT",
  "authors": [
    {
      "name": "btccom"
    }
  ],
  "support": {
    "issues": "https://github.com/btccom/bitwasp-bitcoin-bch-addon/issues",
    "source": "https://github.com/btccom/bitwasp-bitcoin-bch-addon"
  },
  "autoload": {
    "psr-4": {
      "Btccom\\BitcoinCash\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Btccom\\BitcoinCash\\Test\\": "test/"
    }
  },
  "require": {
    "btccom/cashaddress": "v0.0.3",
    "bitwasp/bitcoin": "~1.0"
  },
  "scripts": {
    "post-update-cmd": [
      "patch vendor/bitwasp/bitcoin/src/Transaction/Factory/Signer.php Signer.php.patch"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "squizlabs/php_codesniffer": "v2.0.0"
  }
}
